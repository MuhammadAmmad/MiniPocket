<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bmi__calculator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbarThumbVertical="@android:color/transparent"
    tools:context="com.example.roshan.minipocket.BMI_Calculator">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Enter Height"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:orientation="horizontal">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="In Feet"
                android:inputType="number"
                android:id="@+id/edit_feet"
                android:textAlignment="center"
                android:background="@drawable/textinputdrawer"
                android:layout_weight="0.5"
                android:layout_marginRight="15dp"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="In Inch"
                android:inputType="number"
                android:textAlignment="center"
                android:background="@drawable/textinputdrawer"
                android:layout_weight="0.5"
                android:id="@+id/edit_inch"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Enter Weight"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:orientation="horizontal">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="In Kilogram"
                android:textAlignment="center"
                android:inputType="number"
                android:background="@drawable/textinputdrawer"
                android:layout_weight="0.5"
                android:id="@+id/edit_weight"/>
        </LinearLayout>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Calculate BMI"
            android:layout_gravity="center"
            android:id="@+id/btn_calculate_bmi"
            android:background="#d3d3d3"
           />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Result of BMI"
            android:layout_marginTop="20dp"
            android:id="@+id/txt_result"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:id="@+id/txt_decision"/>
    </LinearLayout>

</ScrollView>
